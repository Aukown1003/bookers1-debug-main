<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <!--colspan = 水平方向のセルの結合数-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book %></td>
        <!--<td>< %= link_to 'Edit', edit_book_path ←idなし, %></td>-->
        <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h2>New book</h2>
<!--< %= render 'form' ← 引数を渡していない%>-->
<!--またしてもカンマを忘れていた！-->
<%= render 'form', book: @book %>
